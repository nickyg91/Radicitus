@{
    ViewData["Title"] = "Radicitus Home";
}
<div>
    <div class="text-center col-4 offset-4">
        <img src="images/Logo_Radicitus_Black.png" />
    </div>
    <div class="container">
        <ul class="hex-grid">
            <li class="hex">
                <div class="hexIn">
                    <a class="hexLink" href="#">
                        <img src="images/calendar-icon.png" alt="" />
