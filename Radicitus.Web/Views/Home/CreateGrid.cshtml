
@{
    ViewData["Title"] = "Raid Efforts";
}

<div class="container">
    <h1>W.H.O.R.E.S</h1>
    <button class="btn btn-outline-info" data-toggle="modal" data-target="#addGuildiesModal">
        Add Guild Members
        <i class="fa fa-plus-circle"></i>
    </button>
</div>
<div class="grid-container">
    <div>
        @{ var squareNumber = 1;}
        @for (var i = 1; i <= 10; i++)
        {
            <div class="row offset-2">
                @for (var j = 1; j <= 10; j++)
                {
                    <div id="square_@(squareNumber)" class="border border-primary col-1 grid-square">
                        @(squareNumber)
                        <div class="member-name">

                        </div>
                    </div>
                    squareNumber++;
                }
            </div>
        }
    </div>
</div>
<div id="addGuildiesModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Guildies</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>
                        Member Name
                    </label>
                    <input id="memberName" type="text" placeholder="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>
                        Numbers
                    </label>
                    <input type="text" id="chosenNumbers" placeholder="1,2,3..." class="form-control" />
                </div>
                <button id="addMember" class="btn btn-outline-primary">
                    Add
                    <i class="fa fa-plus-square"></i>
                </button>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                Member
                            </th>
                            <th>
                                Numbers
                            </th>
                            <th>
                                Owes
                            </th>
                            <th>
                                Paid
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>