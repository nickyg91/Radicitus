<div class="container mt-3">
    <h1>
        W.H.O.R.Es
        @if (User.Identity.IsAuthenticated)
        {
            <button class="btn btn-outline-primary" data-toggle="modal" data-target="#addGridModal">
                <i class="fa fa-plus-square"></i>
                Add
            </button>
        }
    </h1>
    <h3>We Help Out Radicitus Efforts</h3>
    <hr />
    <div id="gridsDisplay">
        @await Component.InvokeAsync("RenderAllGrids", null).ConfigureAwait(false)
    </div>
</div>
@if (this.User.Identity.IsAuthenticated)
{
    <div id="addGridModal" class="modal" tabindex="-1" role="dialog">
        @{Html.RenderPartial("CreateGridModal");}
    </div>
}
@section scripts{ 
    <script type="text/javascript" src="~/js/GridHome.js"></script>
}